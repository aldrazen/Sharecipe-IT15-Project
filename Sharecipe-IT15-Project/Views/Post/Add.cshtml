@{
}

@model AddPostModel

<h1>Add Post</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Caption</label>
        <input type="text" class="form-control" asp-for="Input.caption" />
        <span asp-validation-for="Input.caption" class="text-danger fw-bold"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Ingredients</label>
        <input type="text" class="form-control" asp-for="Input.ingredients" />
        <span asp-validation-for="Input.ingredients" class="text-danger fw-bold"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Direction</label>
        <input type="text" class="form-control" asp-for="Input.direction" />
        <span asp-validation-for="Input.direction" class="text-danger fw-bold"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Prep Time</label>
        <input type="text" class="form-control" asp-for="Input.prepTime" />
        <span asp-validation-for="Input.prepTime" class="text-danger fw-bold"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Cook Time</label>
        <input type="text" class="form-control" asp-for="Input.cookTime" />
        <span asp-validation-for="Input.cookTime" class="text-danger fw-bold"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Serving</label>
        <input type="text" class="form-control" asp-for="Input.serving" />
        <span asp-validation-for="Input.serving" class="text-danger fw-bold"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>


</form>


